{
    "compilerOptions": {
      "target": "ESNext",
      "lib": ["dom", "es2016"],
      "outDir": "./dist",
      "rootDir": "./src",
      "module": "ESNext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true
    },
    "include": ["src"]
}

